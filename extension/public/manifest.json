{
  "manifest_version": 3,
  "name": "Agentic Browser Extension",
  "version": "1.1",
  "description": "ChatGPT, but for your browser.",

  "permissions": ["storage", "sidePanel", "activeTab","tabs", "scripting"],
  "host_permissions": ["<all_urls>"],

  "action": { "default_title": "Agentic Browser Extension" },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": { "default_path": "sidepanel.html" }
  
}
